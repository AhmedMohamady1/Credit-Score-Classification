name: mlflow-project

python_env: python_env.yaml

entry_points:
  main:
    parameters:
      C: {type: float, default: 1.0}
      kernel: {type: str, default: "rbf"}
      gamma: {type: str, default: "scale"}
      degree: {type: int, default: 3}
      coef0: {type: float, default: 0.0}
      probability: {type: bool, default: true}
      shrinking: {type: bool, default: true}
      tol: {type: float, default: 0.001}
      max_iter: {type: int, default: -1}
      class_weight: {type: str, default: "None"}
      decision_function_shape: {type: str, default: "ovr"}
    command: >
      python train.py
      --C {C}
      --kernel {kernel}
      --gamma {gamma}
      --degree {degree}
      --coef0 {coef0}
      --probability {probability}
      --shrinking {shrinking}
      --tol {tol}
      --max_iter {max_iter}
      --class_weight {class_weight}
      --decision_function_shape {decision_function_shape}
